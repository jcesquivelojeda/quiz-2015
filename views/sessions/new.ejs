
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Iniciar Sesion</h3>
  </div>
  <div class="panel-body text-left">
	<form method="post" action="/login">
		<div class="field">
		<label for="login">Usuario</label></br>
		<input type="text" class="form-control" id="login" name="login" size="30"/>
		</div>
		<div style="padding: 10px 0px"></div>
		<div class="field">
		<label for="password">Password</label></br>
		<input type="password" class="form-control" id="password" name="password" size="30"/>
		</div>
		<div style="padding: 10px 0px"></div>
		<div class="actions">
		<input type="submit" name="commit" value="Ingresar" class="btn btn-primary btn-block"/>
		</div>
	</form>
  </div>
</div>

